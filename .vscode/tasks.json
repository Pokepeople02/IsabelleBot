{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tsc: build - tsconfig.json",
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "cleanup",
			"type": "shell",
			"command": "if ( Test-Path out/src ) { cmd /c del /s /q \"out\\src\" }"
		},
		{
			"label": "clear persistent data",
			"type": "shell",
			"command": "Remove-Item out/data/* -Recurse -Force"
		},
		{
			"label": "Cleanup and Build",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": [
				"cleanup",
				"tsc: build - tsconfig.json"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}